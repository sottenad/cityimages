<div class="col-sm-12">
<h1>Edit city</h1>
<form>
    <div class="col-sm-8">
        <div class="form-group">
            <label>Name</label>
            <input type="text"  class="form-control"  id="name" name="name" value="{{data.name}}"/>
        </div>

        <div class="form-group">
            <label>latitude</label>
            <input type="text"  class="form-control"  id="lat" name="lat" value="{{data.latitude}}"/>
        </div>

        <div class="form-group">
            <label>longitude</label>
            <input type="text"  class="form-control"  id="long" name="long" value="{{data.longitude}}" />
        </div>

        <div class="form-group">
            <label>image</label>
            <input type="file" class="form-control"  id="image-input" value="{{data.image}}" name="image-input" />
            <input type="hidden" id="image-url" name="image-url" value="{{data.image}}">
        </div>

        <div class="form-group">
            <a id="submit" class="btn btn-primary">Submit</a>
        </div>
    </div>

    <div class="col-sm-4">
        <small><i>Image Preview</i></small>
        <img id="preview" style="height:200px" src="{{data.image}}">
    </div>
</form>
</div>

<script>
    var itemId = {{data.id}};
</script>
<script src="/javascripts/upload-helpers.js"></script>
<script src="/javascripts/edit.js"></script>


